{
  "http": {
    "allowlist": [
      {
        "host": "slack.com",
        "path_prefix": "/api/",
        "methods": ["GET", "POST"]
      }
    ],
    "credentials": {
      "slack_bot_token": {
        "secret_name": "slack_bot_token",
        "location": { "type": "bearer" },
        "host_patterns": ["slack.com"]
      }
    },
    "rate_limit": {
      "requests_per_minute": 50,
      "requests_per_hour": 1000
    },
    "timeout_secs": 30
  },
  "secrets": {
    "allowed_names": ["slack_bot_token"]
  }
}
